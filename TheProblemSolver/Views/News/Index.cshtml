@model IEnumerable<TheProblemSolver.Models.NewsItem>
@{
    int i = 0;
}

<div class="box-01-top"></div>
<div class="box-01-top-b box">
    <span class="f-right">@*Updated: 15.7.2008  15:34*@</span>
    <span class="f-left">
        <strong>
            <a href="https://twitter.com/MauriceDB">Tweets</a>
        </strong>
    </span>
</div>
<div class="box-01">
    @foreach (var item in Model)
    {
        <dl class="news box @(i++ % 2 == 0 ? "" : "bg")">
            <dt>
                @item.Date.ToString("MMM")<br />
            <span>@item.Date.Day</span>
        </dt>
        <dd>
            <span>@item.Date.ToLocalTime().ToShortTimeString()</span><br />
            @Html.Raw(item.Description)
        </dd>
    </dl>
    }
</div>
<div class="box-01-bottom"></div>

